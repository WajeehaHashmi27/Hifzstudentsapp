<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewSabaqPara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sabaq Para:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewSabaqSurah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sabaq Surah:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewSabaqVerse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sabaq Verse:"
        android:textStyle="bold" />

    <!-- Add other TextViews for the remaining columns -->

</LinearLayout>
