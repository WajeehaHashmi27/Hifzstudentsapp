<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewStudentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student ID:"

        android:textColor="@android:color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textViewStudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Name:"

        android:textColor="@android:color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textViewStudentAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Age:"

        android:textColor="@android:color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textViewStudentClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Class:"

        android:textColor="@android:color/black"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Date " />
    <TextView
        android:id="@+id/textViewSabaq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sabaq:"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/textViewSabaqStatus1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous Sabaq:"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="5dp"
        android:textSize="17sp" />
    <EditText
        android:id="@+id/editTextSabaqPara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Sabaq para " />
    <EditText
        android:id="@+id/editTextSabaqSurah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Sabaq surah" />

    <EditText
        android:id="@+id/editTextSabaqVerse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Sabaq verse" />

    <TextView
        android:id="@+id/textViewManzil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Manzil:"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/textViewManzilStatus1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Previous Manzil:"
        android:textColor="@android:color/black"
        android:layout_marginBottom="5dp"
        android:textSize="17sp" />
    <EditText
        android:id="@+id/editTextManzilPara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Manzil para " />

    <TextView
        android:id="@+id/textViewSabaqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sabaqi:"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/textViewSabaqiStatus1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Previous Sabaqi:"
        android:textColor="@android:color/black"
        android:layout_marginBottom="5dp"
        android:textSize="17sp" />
    <EditText
        android:id="@+id/editTextSabaqiPara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Sabai para " />

    <Button
        android:id="@+id/buttonAssignTask"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/button_background_color"
        android:textColor="@color/button_text_color"
        android:text="Assign"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>
